---
import DefaultLayout from '@layouts/DefaultLayout.astro'
import PageHeader from '@components/PageHeader.astro'
import SocialShares from '@components/SocialShares.astro'
import { Heading } from 'accessible-astro-components'
import { getCollection, render } from 'astro:content'
import type { CollectionEntry } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('blog')

  const postImages = [
    { src: '/posts/post-image-1.png' },
    { src: '/posts/post-image-2.png' },
    { src: '/posts/post-image-3.png' },
    { src: '/posts/post-image-4.png' },
    { src: '/posts/post-image-5.png' },
    { src: '/posts/post-image-6.png' },
  ]

  return posts.map((entry, idx) => {
    const withImage = {
      ...entry,
      featuredImage: entry.data.image?.url ?? postImages[idx % postImages.length].src,
    }

    return {
      params: { post: entry.id },     // <-- use id; matches [post].astro
      props: { post: withImage },     // pass entry as prop (like projects)
    }
  })
}

interface Props {
  post: CollectionEntry<'blog'> & { featuredImage: string }
}

const { post } = Astro.props
const { Content } = await render(post)

const author = {
  name: post.data.author ?? 'A11Y Person',
  image: '/posts/post-image-1.png',
  bio: 'Blog author',
}
---

<DefaultLayout title={post.data.title} description={post.data.description} url={`/blog/${post.id}`}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    author={author}
    bgType="bordered"
    featuredImage={post.featuredImage}
  />

  <section class="my-12">
    <div class="narrow space-content container">
      <article class="prose">
        <Content />
      </article>
    </div>
  </section>

  <section class="my-12">
    <div class="narrow space-content container">
      <Heading level="h2">Share this post</Heading>
      <SocialShares />
    </div>
  </section>
</DefaultLayout>

<style lang="scss" is:global>
  .narrow { margin-inline: auto; max-width: 65ch; }
</style>
